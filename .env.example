# Path: .env.example

# Telegram Bot configuration
# Obligatorio. API key del bot de Telegram
TELEGRAM_API_KEY=your_telegram_api_key_here

# Google Gemini API configuration
# Obligatorio. API key de Gemini
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# Rasa REST endpoint
# Opcional. URL del endpoint REST de Rasa. Default: http://localhost:5005/webhooks/rest/webhook
RASA_REST_URL=http://localhost:5005/webhooks/rest/webhook

# Deshabilitar Rasa (para usar solo Gemini)
# Opcional. true/false. Default: false
DISABLE_RASA=false

# Longitud m√°xima de mensajes en logs
# Opcional. Entero positivo. Default: 160
LOG_MESSAGE_MAX_LENGTH=160

# Opcional. Delay entre mensajes de Telegram en segundos. Default: 0.5
TELEGRAM_MESSAGE_DELAY=0.5
